# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# MariaDB Database Configuration
DATABASE_URL=mariadb+mysqldb://username:password@localhost:3306/imagedb

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216

# MariaDB Docker Configuration (used in docker-compose.yml)
MYSQL_USER=imageuser
MYSQL_PASSWORD=imagepass
MYSQL_DATABASE=imagedb
MYSQL_ROOT_PASSWORD=rootpass

# For local development without Docker:
# DATABASE_URL=mariadb+mysqldb://root:password@localhost:3306/imagedb
